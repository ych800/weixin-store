/* pages/store/info/index.wxss */
.storeInfo{
    position: relative;
    width:100%;
    height:580rpx;
}
.storeInfo .bgImg{
    position: absolute;
    left:0;
    top:0;
    width: 100%;
    height: 100%;
    z-indx:-1;
}
.storeInfo .info{
   height:300rpx;
   width:100%;
   position: absolute;
   z-index:10;
   top:10rpx;
   left:0;
   text-align: center;
}
.storeInfo .info .logo{
    min-height:150rpx;
    width:100%;
}
.storeInfo .info text{
    display: inline-block;
    width:100%;
    margin-bottom:8rpx;
    /*color:#4A4A4A;*/
}
.storeInfo .info .phone,
.storeInfo .info .addr{
    text-align: left;
    padding-left:30rpx;
    /*font-size:12px;*/
}
.storeInfo .info .logo .logoImg{
    width:300rpx;
    height:300rpx;
    border-radius: 50%;
    margin-top:50rpx;
    border:1px solid #ccc;
}
.storeInfo .info .logo .name{
    font-weight: bold;
    margin:20rpx auto;
    font-size:18px;
}

.orderBtn{
    margin:20rpx auto;
    width:90%;
    height:80rpx;
    line-height: 80rpx;
    font-size:18px;
    font-weight: bold;
    padding:10px 0;
    text-align: center;
    background-color: #7E0D0D;
    color:#fff;
    border-radius: 8rpx;
}
.order-btn-hover{
    background-color:#BF1A1A ;
}

/*toggle list*/
.subToggle{
    width:100%;
}
.subToggle .item{
    overflow: hidden;
    padding:20rpx 50rpx;
    border-bottom:1px solid #ededed;
}
.subToggle .item.toggleActive{
    background-color:#ccc;
}
.subToggle .item image{
    float:left;
    width:130rpx;
    height:100rpx;
    border:1px solid #ccc;
    margin-left:5rpx;
    margin-right:10px;
}
.subToggle .item  .name{
    float:left;
    color:#C91212;
    font-size:18px;
    line-height:100rpx;
    font-weight: bold;
}
.subToggle .item .toggleIcon{
    float:right;
    line-height:100rpx;
    color:#666;
    font-size:14px;
}
.subToggle .item .toggleIcon .more{
    margin-right:10rpx;
}