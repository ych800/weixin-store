<view class="section">
  <view class="section__title">vertical scroll</view>
  <scroll-view scroll-y style="height: 200px;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
    <view id="green" style='background-color:green;height:100rpx;' class="scroll-view-item bc_green"></view>
    <view id="red" style='background-color:red;height:100rpx;'  class="scroll-view-item bc_red"></view>
    <view id="yellow" style='background-color:yellow;height:100rpx;'  class="scroll-view-item bc_yellow"></view>
    <view id="blue" style='background-color:blue;height:100rpx;'  class="scroll-view-item bc_blue"></view>
    <view id="blue" style='background-color:blue;height:100rpx;'  class="scroll-view-item bc_blue"></view>
    <view id="blue" style='background-color:blue;height:100rpx;'  class="scroll-view-item bc_blue"></view>
    <view id="blue" style='background-color:blue;height:100rpx;'  class="scroll-view-item bc_blue"></view>
    <view id="blue" style='background-color:blue;height:100rpx;'  class="scroll-view-item bc_blue"></view>
  </scroll-view>

  <view class="btn-area">
    <button size="mini" bindtap="tap">click me to scroll into view </button>
    <button size="mini" bindtap="tapMove">click me to scroll</button>
  </view>
</view>
<view class="section section_gap">
  <view class="section__title">horizontal scroll</view>
  <scroll-view class="scroll-view_H" scroll-x style="width: 100%">
    <view id="green" style='background-color:green;height:100rpx;' class="scroll-view-item_H bc_green"></view>
    <view id="red" style='background-color:red;height:100rpx;' class="scroll-view-item_H bc_red"></view>
    <view id="yellow"style='background-color:yellow;height:100rpx;' class="scroll-view-item_H bc_yellow"></view>
    <view id="blue"style='background-color:blue;height:100rpx;' class="scroll-view-item_H bc_blue"></view>
  </scroll-view>
</view>